{
    "name": "@modrinth-ts/cli",
    "version": "0.0.1",
    "devDependencies": {
        "@biomejs/biome": "2.2.6",
        "@clack/prompts": "^0.11.0",
        "@types/bun": "latest",
        "simple-git-hooks": "^2.13.1"
    },
    "peerDependencies": {
        "typescript": "^5.9.3"
    },
    "bin": {
        "modrinth": "./dist/index.js"
    },
    "description": "TypeScript CLI-only client for Modrinth",
    "scripts": {
        "biome": "biome check --write",
        "ci": "biome ci",
        "build": "tsc",
        "dev": "tsc --watch",
        "setup": "bun run ./scripts/setup.ts && bun i --force && bunx simple-git-hooks && bun run biome && git add . && git commit -m 'chore: project setup'",
        "tags": "git push origin --tags && git push",
        "patch": "bun pm version patch && bun run tags",
        "minor": "bun pm version minor && bun run tags",
        "major": "bun pm version major && bun run tags"
    },
    "type": "module",
    "files": [
        "dist"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/modrinth-ts/cli.git"
    },
    "simple-git-hooks": {
        "pre-commit": "bun run biome"
    },
    "license": "MIT",
    "dependencies": {
        "@drizzle-team/brocli": "^0.11.0",
        "@inquirer/prompts": "^7.9.0",
        "@modrinth-ts/lib": "^2.1.0",
        "@modrinth-ts/mrpack": "^2.3.0",
        "chalk": "^5.6.2",
        "moment": "^2.30.1"
    }
}
